{
  "manifest_version": 2,
  "name": "Download Echo",
  "version": "1.0",
  "description": "An extension that sends a JSON request",
  "background": {
    "scripts": [
      "background.js",
      "popup.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "downloadinterceptor@hellzeras.com"
    }
  },
  "permissions": [
    "webRequest",
    "https://*/*",
    "http://*/*",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "storage"
  ]
}